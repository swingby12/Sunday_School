<%= form_for(@ss_class_session) do |f| %>
  <% if @ss_class_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ss_class_session.errors.count, "error") %> prohibited this ss_class_session from being saved:</h2>

      <ul>
      <% @ss_class_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :class_id %><br />
    <%= f.number_field :class_id %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :instructor_id %><br />
    <%= f.number_field :instructor_id %>
  </div>
    <div class="control-group">
      <%= f.label :attendance_tokens,
                  "Instructors",
                  :class => "control-label"
      %>

      <%= f.text_field :attendance_tokens,
                       "data-pre" => @ss_class_session.users.map{|u| {
                            :name => [u.name_first, u.name_last].join(' '),
                            :id => u.id}
                       }.to_json %>


    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
