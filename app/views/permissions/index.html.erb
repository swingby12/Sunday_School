
<h3>Permission Table</h3>

<table class="table table-striped table-bordered">
  <tr>
    <th>User Name</th>
    <th>Category</th>
    <th>Can Create?</th>
    <th>Can Write?</th>
    <th>Action</th>

  </tr>

<% @permissions.each do |permission| %>
  <tr>
    <td><%= link_to permission.user.name, permission.user %></td>
    <td><%= best_in_place permission,
                          :category,
                          :type => :select,
                          :collection => permission_collection
    %></td>
    <td><%= best_in_place permission,
                          :can_create,
                          :type => :checkbox
    %></td>
    <td><%= best_in_place permission,
                          :can_write,
                          :type => :checkbox
    %></td>
    <td><%= link_to 'Destroy', permission, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<div class="form-actions">
  <%= link_to 'New Permission', new_permission_path, :class => "btn btn-primary" %>
</div>

